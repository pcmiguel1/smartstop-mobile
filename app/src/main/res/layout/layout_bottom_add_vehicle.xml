<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetBookDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">
    
    <androidx.cardview.widget.CardView
        android:layout_width="45dp"
        android:layout_height="5dp"
        android:backgroundTint="#D2D2D2"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="0dp"
        />

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Vehicle"
        android:fontFamily="@font/montserratregular"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/text_type"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Type"
            android:fontFamily="@font/montserratregular"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_toRightOf="@+id/text_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">


            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:backgroundTint="#EDF2F7"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/categorybasic"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:backgroundTint="#EDF2F7"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/categorybolt"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:backgroundTint="#EDF2F7"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/categoryminivan"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginLeft="20dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:backgroundTint="#EDF2F7"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/categorypremium"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:id="@+id/vehicle_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textCursorDrawable="@null"
        android:hint="Vehicle model"
        android:textColorHint="#777777"
        android:fontFamily="@font/montserratregular"
        android:background="@drawable/custom_button"
        android:backgroundTint="#EDF2F7"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/vehicle_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp"
        android:textCursorDrawable="@null"
        android:hint="Vehicle registration"
        android:textColorHint="#777777"
        android:fontFamily="@font/montserratregular"
        android:background="@drawable/custom_button"
        android:backgroundTint="#EDF2F7"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:inputType="text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="20dp"
            />

    </LinearLayout>

</LinearLayout>
